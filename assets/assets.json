{
	"textures": {
		"background": {
            "file":   "textures/background.png"
        },
        "menuboard": {
            "file":  "textures/menu.png"
        },
        "menubutton": {
            "file":  "textures/button.png"
        },
        "left": {
            "file":   "textures/left_arrow.png"
        },
        "right": {
            "file":   "textures/right_arrow.png"
        }
	},
	"fonts": {
		"gyparody": {
			"file":     "fonts/gyparody-hv.ttf",
			"size":     48
		}
	},
	"sounds": {
		"failurewav": "Failure.wav"
	},
	"widgets": {
		"textbutton" : "widgets/textbutton.json"
	},
    "scene2s" : {
        "lab": {
            "type"      : "Node",
            "comment"   : "This is the root node of the scene for the lab",
            "format"    : {
                "type" : "Anchored"
            },
            "children":  {
                "backdrop": {
                    "type": "Image",
                    "data": {
                        "texture":  "background",
                        "anchor":   [0.0,0.5]
                    },
                    "layout" : {
                        "x_anchor" : "left",
                        "y_anchor" : "fill"
                    }
                },
                "startmenu": {
					"type": "Image",
					"format"    : {
						"type" : "Anchored"
					},
					"data": {
						"texture":  "menuboard",
						"anchor":   [0.5,1.0],
						"scale":    0.8
					},
					"children":  {
						"left": {
							"type"   : "Button",
							"data"   : {
								"upnode"  : "up",
								"anchor":   [0.0,0.0]
							},
							"children": {
								"up" : {
									"type": "Image",
									"data": {
										"texture":  "left"
									}
								}
							},
							"layout" : {
								"x_anchor" : "left",
								"y_anchor" : "bottom",
								"y_offset" : 0.1,
								"x_offset" : 0.1
							}
						},
						"right": {
							"type"   : "Button",
							"data"   : {
								"upnode"  : "up",
								"anchor":   [1.0,0.0]
							},
							"children": {
								"up" : {
									"type": "Image",
									"data": {
										"texture":  "right"
									}
								}
							},
							"layout" : {
								"x_anchor" : "right",
								"y_anchor" : "bottom",
								"y_offset" : 0.1,
								"x_offset" : -0.1
							}
						},
						"button1": {
							"type"   : "Widget",
							"data"   : {
								"key"     : "textbutton",
								"variables" : {
									"text": "Click me"
								}
							}
						}
					},
					"layout" : {
						"x_anchor" : "center",
						"y_anchor" : "top"
					}
				}
            }
        }
    }
}
